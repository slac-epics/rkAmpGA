
record(bo, "$(P)SSSB_STATE_SET") {
    field(DESC, "Set device operation state")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(OUTPORT), 0)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
}

# Readback for RUN
record(bi, "$(P)SSSB_STATE") {
    field(DESC, "Device operation state readback")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(INPORT), 0)")
    field(ZNAM, "OFF")
    field(ONAM, "ON")
    field(SCAN, "I/O Intr")
}

record(bo, "$(P)SSSB_RESET") {
    field(DESC, "Device reset")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(OUTPORT), 1)")
}

# Readback for forward power
record(longin, "$(P)SSSB_RF_OUT_PWR") {
    field(DESC, "Forward out power readback")
    field(EGU, "W")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(INPORT), 2)")
    field(SCAN, "I/O Intr")
    # Register range 10-999W, however the hardware can only handle 600W out
    field(HOPR, "600")
    field(LOPR, "10")
}

# Readback for ref power
record(longin, "$(P)SSSB_RF_RFLCT_PWR") {
    field(DESC, "Out reflected power readback")
    field(EGU, "W")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(INPORT), 3)")
    field(SCAN, "I/O Intr")
    # Register range 10-999W, however the hardware can only handle 250W out
    field(HOPR, "250")
    field(LOPR, "10")
}

record(bi, "$(P)SSSB_RF_OUT_PWR_FLT") {
    field(DESC, "Forward out power exceeds 600W")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(INPORT), 4)")
    field(OSV, "MAJOR")
    field(ZNAM, "OK")
    field(ONAM, "FAULT")
    field(SCAN, "I/O Intr")
}

